{
    "stages": [
        {
            "name": "代码源",
            "type": "source",
            "stepGroup": [
                {
                    "steps": [
                        {
                            "name": "git",
                            "params": [
                                { "key": "repository", "vaule": "" },
                                { "key": "branch", "value": "master" }
                            ],
                            "script": "git clone {{repository}} && git checkout {{branch}}"
                        }
                    ]
                }
            ]
        },
        {
            "name": "代码检查",
            "stepGroup": [
                {
                    "steps": [
                        {
                            "name": "代码lint",
                            "params": [
                                { "key": "repository", "vaule": "" }
                            ],
                            "script": "npm run lint"
                        },
                        {
                            "name": "单元测试",
                            "params": [
                                { "key": "repository", "vaule": "" }
                            ],
                            "script": "npm run test"
                        }
                    ]
                },
                {
                    "steps": [
                        {
                            "name": "代码格式化",
                            "params": [
                                { "key": "repository", "vaule": "" }
                            ],
                            "script": "npm run format"
                        }
                    ]
                }

            ]
        }
    ]
}